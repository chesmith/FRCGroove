            $("#" + matchKey + "-sr").attr('class', `${((predictedRed > predictedBlue) ? "redHighlightPredict" : "red")}`);
            $("#" + matchKey + "-sb").attr('class', `${((predictedRed < predictedBlue) ? "blueHighlightPredict" : "blue")}`);
