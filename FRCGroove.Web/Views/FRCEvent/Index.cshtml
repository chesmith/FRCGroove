                else
                    $(this).show();
                showRow = false;
            }
        });
    }

    function resetFilter() {
        $('#tableMatches > tbody  > tr').each(function () {
            var targetID = $(this).attr('id');
            if (targetID) {
                $('#' + targetID).show();
            }
